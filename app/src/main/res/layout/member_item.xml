<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/member_card"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_delete_24"
            android:id="@+id/delete_member"
            android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Post"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:fontFamily="@font/muli_extrabold_italic"
            android:layout_weight="0.5"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Muthu Narayanan M"
            android:textAlignment="center"
            android:id="@+id/post_member"
            android:textSize="16sp"
            android:fontFamily="@font/muli_semibold_italic"
            android:layout_weight="1.5"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Name"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:fontFamily="@font/muli_extrabold_italic"
                android:layout_weight="0.5"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Muthu Narayanan M"
                android:id="@+id/name_member"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="16sp"
                android:fontFamily="@font/muli_semibold_italic"
                android:layout_weight="1.5"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Email Id"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:fontFamily="@font/muli_extrabold_italic"
                android:layout_weight="0.5"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="venkatudfu7@gmail.com"
                android:id="@+id/email_member"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:fontFamily="@font/muli_semibold_italic"
                android:layout_weight="1.5"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Address"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:fontFamily="@font/muli_extrabold_italic"
                android:layout_weight="0.5"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="12/10 MNN HOUSE,KARAIKUDI-630002"
                android:id="@+id/address_member"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:fontFamily="@font/muli_semibold_italic"
                android:layout_weight="1.5"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
