<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddMemberActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Post"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:fontFamily="@font/muli_extrabold_italic"
                android:layout_weight="0.5"/>


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:id="@+id/post_member"
                android:textSize="16sp"
                android:fontFamily="@font/muli_semibold_italic"
                android:layout_weight="1.5"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Name"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:fontFamily="@font/muli_extrabold_italic"
                android:layout_weight="0.5"/>


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:id="@+id/name_member"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="16sp"
                android:fontFamily="@font/muli_semibold_italic"
                android:layout_weight="1.5"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Email Id"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:fontFamily="@font/muli_extrabold_italic"
                android:layout_weight="0.5"/>


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:id="@+id/email_member"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:fontFamily="@font/muli_semibold_italic"
                android:layout_weight="1.5"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Address"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:fontFamily="@font/muli_extrabold_italic"
                android:layout_weight="0.5"/>


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:id="@+id/address_member"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:fontFamily="@font/muli_semibold_italic"
                android:layout_weight="1.5"/>

        </LinearLayout>


    <Button
        android:id="@+id/add_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:elevation="8dp"
        android:background="@color/colorPrimary"
        android:text="ADD MEMBER"
        android:fontFamily="@font/muli_black"
        android:textColor="@color/white"
        android:transitionName="transition_next_btn" />



</LinearLayout>